<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Workout - Gym blog</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/styles.css">
  @entryPointStyles('app')
  @entryPointScripts('app')
</head>
<body>
<div >
  <div class="container-md">
    <form id="formulario" class="form-control container-sm mb-3">
      <div class="flex-container">
        <div class="body-part">
          <h3>Lower Body</h3>
          @each(muscle in groupMusclesByBodyPart.Lower)
            <label for="muscle-{{muscle._id}}">{{muscle.name}}
              <input type="checkbox" class="options" id="muscle-{{muscle._id}}" name="muscle" value="{{muscle._id}}" >
            </label>
          @end
        </div>
        <div class="body-part">
           <h3>Upper Body</h3>
          @each(muscle in groupMusclesByBodyPart.Upper)
            <label for="muscle-{{muscle._id}}">{{muscle.name}}
              <input type="checkbox" class="options" id="muscle-{{muscle._id}}" name="muscle" value="{{muscle._id}}">
            </label>
          @end
        </div>
        <div class="body-part">
          <h3>Core</h3>
          @each(muscle in groupMusclesByBodyPart.Core)
            <label for="muscle-{{muscle._id}}">{{muscle.name}}
              <input type="checkbox" class="options" id="muscle-{{muscle._id}}" name="muscle" value="{{muscle._id}}" >
            </label>
          @end
        </div>
      </div>
    </form>
    <div id="gif-container" class="hidden">
      <div class="loader">
        <div class="inner one"></div>
        <div class="inner two"></div>
        <div class="inner three"></div>
      </div>
    </div>
    <div class="form-control hidden" id="table-workout-list">
      <h1>Workout list</h1>
      <table class="table">
        <thead>
          <th>#</th>
          <th>Exercise</th>
          <th>Muscle</th>
        </thead>
        <tbody id="list">
        </tbody>
      </table>
    </div>


  </div>
  <script src="/js/scripts.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
</div>
</body>
</html>
